<div class="banner">
  <div class="banner-content">
    <h1>RESA</h1>
    <p>Rent unique places to minimum prices</p>
    <%= form_tag hotels_path, class: 'form-inline', method: :get do %>
      <%= label_tag(:city, "Where") %>
      <%= text_field_tag :city, params[:city], class: "form-control", placeholder: "Find a city", id: "flat_address"%>
      <%= date_field(:departing_date, params[:departing_date], value: Date.today, class: "form-control") %>
      <%= date_field(:arriving_date, params[:arriving_date], value: Date.today+1,class: "form-control") %>

      <%= submit_tag("Search", class: "btn btn-success") %>
    <% end %>
  </div>
</div>
