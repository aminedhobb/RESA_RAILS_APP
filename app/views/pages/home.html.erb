<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('/app/assets/images/unsplash.jpg');">
  <div class="banner-content">
    <h1>RESA</h1>
    <p>Rent unique places to minimum prices</p>
    <%= form_tag hotels_path, method: :get do %>
      <%= label_tag(:city, "Where") %>

      <%= text_field_tag :city,
        params[:city],
        class: "form-control",
        placeholder: "Find a city"
      %>
      <%= label_tag(:city, "When") %>

      <%= date_field(:departing_date, params[:departing_date], class: "form-control") %>
      <%= date_field(:arriving_date, params[:arriving_date], class: "form-control") %>

      <%= submit_tag("Search", class: "btn btn-success") %>
    <% end %>
  </div>
</div>
