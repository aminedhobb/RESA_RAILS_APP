<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h1>Welcome to <%= @hotel.name %></h1>
      <ul class="list-unstyled">
        <% @hotel.reviews.each do |review| %>
          <li class='padded-1em'>
            <% 5.times do |i| %>
              <% if i < review.rating %>
                <i class="fa fa-star yellow"></i>
              <% else %>
                <i class="fa fa-star gray"></i>
              <% end %>
            <% end %>
            <%= review.content %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
