<%= simple_form_for @hotel, :html => { :multipart => true }) do |f| %>
  <%= f.input :name %>
  <%= f.input :address, input_html: {id: "flat_address"} %>
  <%= f.input :stars, collection: (0..5) %>
  <%= f.input :avatar, :multiple => true, name: "hotel_attachments[photo][]" %>
  <%= f.button :submit %>
<% end %>
