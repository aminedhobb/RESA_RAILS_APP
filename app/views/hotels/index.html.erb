<div class="container-hotel">
  <h1 class="text-center">Hotels</h1>
  <div class="row">
    <% @hotels.each do |hotel| %>
    <div class="col-xs-12">
      <div class="card-hotel">
        <%= link_to "", hotel_path(hotel), class: "card-link" %>
        <div class="row">
          <div class="col-xs-5">
        <% if hotel.hotel_attachments.first != nil %>
          <%= image_tag hotel.hotel_attachments.first.photo_url, class: "card-photo" %>
        <% end %>
        </div>
        <div class="col-xs-offset-1 col-xs-6">
        <div class="card-body">
          <h2><%= hotel.name %></h2>
          <h3><%= hotel.stars %> Stars</h3>
        </div>
        </div>
      </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
