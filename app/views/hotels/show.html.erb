<div class="main-container">
  <div class="container">
      <h3><%= @hotel.name %></h3>
        <%= link_to "Edit", edit_hotel_path(@hotel) %>
        <%= link_to "Delete", hotel_path(@hotel), method: :delete, data: {confirm: "Are you sure?"} %>
      <%= @hotel.address %><br>
      <%= render 'carousel' %>
      <br>
      <br>
      <%= render '/rooms/index' %>
      <%= link_to "Add a room", new_hotel_room_path(@hotel) %>
    <div class="list" >
      <%= link_to "Book this hotel", new_hotel_booking_path(@hotel), class: "btn btn-success" %>
    </div>
      <%= render '/reviews/index' %>
  </div>
</div>



