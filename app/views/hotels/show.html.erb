<div class="main-container">
  <div class="container">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <%= @hotel.name %>
      <%= @hotel.address %>
      <% @hotel_attachments.each do |p| %>
      <%= image_tag p.photo_url %>
      <% if policy(p).edit? %>
      <%= link_to "Edit Attachment", edit_hotel_attachment_path(p) %>
      <% end %>
      <% if policy(p).destroy? %>
      <%= link_to "delete Attachment", hotel_attachment_path(p),method: :delete, data: {confirm: "Are you sure?"} %>
      <% end %>
      <% end %>
      <%= link_to 'Home', hotels_path %>
    </div>
  </div>
      <% @hotel.rooms.each do |room| %>
        <%= room.category %>
        <%= room.capacity %>
        <%= room.price %>
        <% room.room_attachments.each do |p| %>
          <%= image_tag p.photo_url %>
          <%= link_to "Edit Attachment", edit_room_attachment_path(p) %>
          <% if policy(p).destroy? %>
            <%= link_to "delete Attachment", room_attachment_path(p),method: :delete, data: {confirm: "Are you sure?"} %>
          <% end %>
        <% end %>
        <%if policy(room).edit? %>
          <%= link_to "Edit", edit_room_path(room) %>
        <% end %>
        <%if policy(room).destroy? %>
          <%= link_to "Delete room", room_path(room), method: :delete, data: { confirm: "Are you sure?" } %>
        <% end %>
      <% end %>
    <% if policy(@hotel).update? %>
    <h3>Hotel dashboard</h3>
    <%= link_to "Add a room", new_hotel_room_path(@hotel) %>
    <%= link_to "Edit  ", edit_room_path(@hotel) %>
    <% end %>

    <%= link_to "Delete hotel", hotel_path(@hotel), method: :delete, data: {confirm: "Are you sure?"} %>
    <h3>Stay in this hotel</h3>
    <%= link_to "Book the room", new_hotel_booking_path(@hotel) %>
  <%= render '/reviews/index' %>
  <div class="map-container"><div id="map" style="width: 25%" data-markers="<%= @markers.to_json %>"></div>
  </div>
</div>



