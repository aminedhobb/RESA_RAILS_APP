<div class="main-container">
  <div class="container">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <%= @hotel.name %>
      <%= @hotel.address %>
      <% @hotel_attachments.each do |p| %>
        <%= image_tag p.photo_url %>
        <% if policy(p).edit? %>
          <%= link_to "Edit Attachment", edit_hotel_attachment_path(p) %>
          <% end %>
        <% if policy(p).destroy? %>
        <%= link_to "delete Attachment", hotel_attachment_path(p),method: :delete, data: {confirm: "Are you sure?"} %>
          <% end %>
      <% end %>
      <%= link_to 'Home', hotels_path %>
      <div class="room-container">
        <table>
          <% @hotel.rooms.each do |room| %>
          <tr>
            <td>
              <%= room.category %>
            </td>
            <td>
              <%= room.capacity %> personnes
            </td>
            <td>
              <%= room.price %> DHS
            </td>
          </tr>
          <% end %>
        </table>
      </div>
    <div class="list" >
      <% if policy(@hotel).update? %>
        <h3>Hotel dashboard</h3>
        <%= link_to "Add a room", new_hotel_room_path(@hotel) %>
        <%= link_to "Edit", edit_room_path(@hotel) %>
        <%= link_to "Delete", hotel_path(@hotel), method: :delete, data: {confirm: "Are you sure?"} %>
      <% end %>
    </div>
    <div class="list" >
      <h3>Customer dashboard</h3>
      <%= link_to "Book the room", new_hotel_booking_path(@hotel) %>
  </div>

      <%= render '/reviews/index' %>
    </div>
  </div>
  <div id="map" style="width: 25%" data-markers="<%= @markers.to_json %>"></div>
</div>


